<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">

    <ImageView
        android:id="@+id/loc_ic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/loc"
        android:layout_marginStart="33dp"
        android:background="#00000000"
        android:src="@drawable/ic_baseline_location_on_24"/>

    <TextView
        android:id="@+id/loc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/loc_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintBottom_toTopOf="@id/fir_layout"
        app:layout_constraintStart_toEndOf="@id/loc_ic"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fir_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loc"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toTopOf="@id/activities"
        android:elevation="10dp"
        android:background="@drawable/rounded_btn"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/upcoming_place"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/upcoming"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/salat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintTop_toBottomOf="@id/upcoming_place"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@id/upcoming_place"
            />

        <TextView
            android:id="@+id/salat_tim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/salat"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="21sp"
            app:layout_constraintStart_toStartOf="@id/upcoming_place"
            />

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/activities"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/scrollview"
        app:layout_constraintStart_toStartOf="@id/loc"
        app:layout_constraintTop_toBottomOf="@id/fir_layout" />

    <HorizontalScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/activities"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toTopOf="@id/third_layout"
        android:scrollbars="none"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sec_layout"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/img1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/todo_list"
                android:padding="4dp"
                android:src="@drawable/ic_todo"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/txt01"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/img1"
                app:layout_constraintEnd_toEndOf="@id/img1"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/todo"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintTop_toBottomOf="@id/img1"/>


            <ImageButton
                android:id="@+id/img2"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/prayer_stats"
                android:padding="4dp"
                android:src="@drawable/ic_stat"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/img1"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/txt02"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@id/img2"
                app:layout_constraintEnd_toEndOf="@id/img2"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/statist"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintTop_toTopOf="@id/txt01"/>

            <ImageButton
                android:id="@+id/img3"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/azkar_icon"
                android:paddingTop="17dp"
                android:src="@drawable/ic_pray"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/img2"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/txt03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/img3"
                app:layout_constraintEnd_toEndOf="@id/img3"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/azkar_sabah"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintTop_toTopOf="@id/txt01"/>

            <ImageButton
                android:id="@+id/img4"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_pray_night"
                android:paddingTop="19.5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/img3"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:contentDescription="@string/duaa_icon" />

            <TextView
                android:id="@+id/txt04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/img4"
                app:layout_constraintEnd_toEndOf="@id/img4"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/duaa"
                app:layout_constraintTop_toTopOf="@id/txt01"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/third_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scrollview"
        android:layout_marginStart="30dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_btn"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp">


        <TextView
            android:id="@+id/sibha_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/sibha_place"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/sibha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sibha_place"
            android:text="@string/sibha_num"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toStartOf="@id/sibha_place"
            />


        <ImageButton
            android:id="@+id/reset"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/ic_reset"
            android:contentDescription="@string/reset_icon"
            app:layout_constraintStart_toStartOf="@id/sibha"
            app:layout_constraintTop_toBottomOf="@id/sibha"
            tools:ignore="TouchTargetSizeCheck" />


        <ImageButton
            android:id="@+id/add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/ic_add"
            android:contentDescription="@string/add_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sibha"
            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>