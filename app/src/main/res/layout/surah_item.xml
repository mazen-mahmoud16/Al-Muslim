<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_btn"
    android:padding="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:elevation="20dp"
    >
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="-21dp"
        app:layout_constraintBottom_toBottomOf="@+id/english_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/english_name">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="19dp"
            android:src="@drawable/surahlistnumber">
        </ImageView>

        <TextView
            android:id="@+id/surah_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageView"
            android:layout_alignTop="@id/imageView"
            android:layout_alignEnd="@id/imageView"
            android:layout_alignBottom="@id/imageView"
            android:gravity="center"
            android:text="1"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <TextView
        android:id="@+id/english_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Al-Fathiha"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/relativelayout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/arabicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سورة الفاتحه"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/english_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/english_name" />

</androidx.constraintlayout.widget.ConstraintLayout>


